<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/ImageViewLeftPadding"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/signup"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/head"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Name"
        android:id="@+id/name_display_signup"
        android:textSize="25dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="25dp"
        android:maxHeight="45dp"
        android:layout_toLeftOf="@+id/name_input_signup"
        android:layout_alignBaseline="@+id/name_input_signup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_input_signup"
        android:textSize="25sp"
        android:minWidth="200dp"
        android:minLines="1"
        android:minHeight="25dp"
        android:maxWidth="25dp"
        android:maxHeight="35dp"
        android:inputType="textPersonName"
        android:text="shreyan mehta"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignLeft="@id/textView2"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/username"
        android:textSize="25sp"
        android:id="@+id/username_display"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/name_display_signup"
        android:layout_alignParentLeft="true"
        android:layout_toRightOf="@+id/username_signup"
        android:layout_alignBaseline="@+id/username_signup"
        android:layout_alignLeft="@+id/name_display_signup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_signup"
        android:textSize="25sp"
        android:minWidth="200dp"
        android:minLines="1"
        android:minHeight="25dp"
        android:maxWidth="25dp"
        android:maxHeight="35dp"
        android:inputType="text"
        android:text="masterofdeath"
        android:layout_below="@+id/name_input_signup"
        android:layout_alignStart="@+id/name_input_signup"
        android:layout_alignLeft="@+id/name_input_signup"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/email"
        android:textSize="25sp"
        android:id="@+id/email_display"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_display"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/email_signup"
        android:layout_alignBaseline="@+id/email_signup"
        android:layout_alignBottom="@+id/email_signup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:minWidth="200dp"
        android:minLines="1"
        android:minHeight="25dp"
        android:maxWidth="25dp"
        android:maxHeight="35dp"
        android:inputType="textEmailAddress"
        android:id="@+id/email_signup"
        android:text="xyz@gmail.com"
        android:layout_below="@+id/username_signup"
        android:layout_alignStart="@+id/username_signup"
        android:layout_alignLeft="@+id/username_signup"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/password"
        android:textSize="25sp"
        android:id="@+id/password_display"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email_display"
        android:layout_toLeftOf="@+id/password_signup"
        android:layout_alignBaseline="@+id/password_signup"
        android:layout_alignBottom="@+id/password_signup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_signup"
        android:textSize="25sp"
        android:minWidth="200dp"
        android:minLines="1"
        android:minHeight="25dp"
        android:maxWidth="25dp"
        android:maxHeight="35dp"
        android:inputType="textPassword"
        android:password="true"
        android:text="password"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/email_signup"
        android:layout_alignLeft="@+id/email_signup"
        android:layout_below="@+id/email_signup" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/signup_form1"
        android:layout_below="@+id/password_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:clickable="true" />


</RelativeLayout>